<script>
    function sort(field, order) {
        $.post(
            "/Feed/GetItemsSorted",
            {
                rssUrl: $("input[name='theRssUrl']").val(),
                sortByField: field,
                sortOrder: order
            },
            function (result) {
                $("#feedItems").html(result);
                //console.log(data);
            }
        );
    }
</script>
